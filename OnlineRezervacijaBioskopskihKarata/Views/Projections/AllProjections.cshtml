@model IEnumerable<OnlineRezervacijaBioskopskihKarata.Models.Projection>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>{{translation.incoming_projections}}</h2>

<br />
@foreach (var item in Model)
{
    <div class="card mb-4">
        <div class="row no-gutters" >
            <div class="col-lg-4">
                @if(item.Image != null) { 
                <img src="data:image/jpg;base64,@(Convert.ToBase64String(item.Image))" class="card-img" style="min-height:256px;" />
                }

            </div>
            <div class="col-md-8" >
                <div class="card-body">
                    <h3 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h3>
                    <hr />
                    <p class="card-text"> <b>{{translation.projection_date}}: </b>@Html.DisplayFor(modelItem => item.Date)</p>
                    <p class="card-text">{{translation.projection_starts_at}} @Html.DisplayFor(modelItem => item.StartTime) {{translation.and_ends_at}} @Html.DisplayFor(modelItem => item.EndTime)</p>
                    <p class="card-text"><b>{{translation.ticket_price}}:</b> @Html.DisplayFor(modelItem => item.TicketCost)din.</p>
                    <button class="btn btn-primary" onclick="document.location.href='/projections/BuyTickets/@Html.DisplayFor(modelItem => item.Id)'">{{translation.button_reserve_tickets}}</button>
                </div>
            </div>
        </div>
    </div>
}
   


