@model OnlineRezervacijaBioskopskihKarata.Models.Projection

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>{{translation.create_new_projection}}</h2>


@using (Html.BeginForm("Create","Projections",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        {{translation.projection_name}}
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            {{translation.start_time}}
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           {{translation.end_time}}
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            {{translation.projection_date}}
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            {{translation.ticket_price}}
            <div class="col-md-10">
                @Html.EditorFor(model => model.TicketCost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TicketCost, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            {{translation.image}}
            <div class="col-md-10">
                <input type="file" name="file" accept="image/*" required=""/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <button type="submit" class="btn btn-primary">{{translation.create_new_projection}}</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("{{translation.back_to_projections_list}}", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
